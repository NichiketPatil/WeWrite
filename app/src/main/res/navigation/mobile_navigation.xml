<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.writerz.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.writerz.ui.chats.UsersFragment"
        android:label="Chats"
        tools:layout="@layout/fragment_chats" >
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.writerz.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_navigation_notifications_to_mobile_navigation"
            app:destination="@id/mobile_navigation"
            app:enterAnim="@transition/cross_fade_in"
            app:exitAnim="@transition/cross_fade_out"
            app:popEnterAnim="@transition/cross_fade_in"
            app:popExitAnim="@transition/cross_fade_out" />
    </fragment>
</navigation>